@@ -241,6 +241,22 @@ RCHAT_CHECK_UPDATE()
   ${0} && RCHAT_EXIT # Reset the script if there are new messages
 }
 
+RCHAT_OPEN_URL() {
+  URL_FOLLOW="$(cat /tmp/rchat-cchat | grep -E 'http://|https://|mailto:|ftp://|magnet:|ircs://' | tail -n 1)"
+  
+  case "$URL_FOLLOW" in
+  "") $0 && RCHAT_EXIT ;;
+  esac
+
+  if [ -e "/usr/bin/xdg-open" ]; then
+		xdg-open $URL_FOLLOW
+  else
+		$BROWSER $URL_FOLLOW
+  fi
+  
+  $0 && RCHAT_EXIT
+}
+
